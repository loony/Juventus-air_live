@{
    ViewBag.Title = "Temperature";
}

<!DOCTYPE HTML>
<html>
<head>
    <script>
        window.onload = function () {

            var chart = new CanvasJS.Chart("chartContainerTemperature", {
                animationEnabled: true,
                title: {
                    text: "Temperature"
                },
                axisX: {
                    valueFormatString: "DD MMM"
                },
                axisY: {
                    title: "Temperature in celsius ",
                    valueFormatString: "#,##0.##",
                    suffix: "°"
                },
                data: [{
                    type: "spline",
                    xValueType: "dateTime",
                    xValueFormatString: "DD MMM",
                    yValueFormatString: "#,###.##",
                    dataPoints: @Html.Raw(ViewBag.DataPoints)
                }]
            });
            chart.render();

        }
    </script>
</head>
<body>

<div>
    <div class="row">
        <h1>CRUD implementieren</h1>
        <p>Datenpunkt erfassen, Datenpunkt editieren, Datenpunkt löschen</p>
        <div>
            @Html.Label("From", null, new {@class = "control-label col-xs-1 spline-chart-style"})
            <div class="col-xs-2">
                <input type="date"/>
            </div>
            @Html.Label("To", null, new {@class = "control-label col-xs-1 spline-chart-style"})
            <div class="col-xs-1">
                <input type="date"/>
            </div>
            <div class="col-xs-2">
                @using (Html.BeginForm("SearchByDateInBetween", "DateTimePicker"))
                {
                    <input type="button" name="buttonSearch" class="btn btn-primary" value="search"/>
                }
            </div>
        </div>
    </div>
</div>
<div id="chartContainerTemperature" class="default-chart"></div>
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</body>
</html> 